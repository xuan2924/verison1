/* pages/profile/profile.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background: #f8f9fa;
  width: 100%; /* 强制铺满宽度 */
  box-sizing: border-box; /* 避免padding撑宽 */
}

/* 用户信息区域 - 仅拉宽适配 */
.user-section {
  background: linear-gradient(135deg, #FF6B95, #FF8E6B);
  padding: 30rpx 30rpx 30rpx; /* 移除左右超大内边距，拉宽有效显示区域 */
  color: white;
  width: 100%;
  box-sizing: border-box;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1; /* 占满剩余宽度 */
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

.user-settings {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  white-space: nowrap; /* 避免按钮换行 */
}

/* 数据统计 - 拉宽卡片容器，保留4列 */
.stats-cards {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 保留原有4列 */
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.stat-card {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  width: 100%;
  box-sizing: border-box;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 菜单区域 - 拉宽适配 */
.menu-section {
  padding: 40rpx 30rpx; /* 减小左右内边距，拉宽显示 */
  width: 100%;
  box-sizing: border-box;
}

.menu-group {
  margin-bottom: 40rpx;
  width: 100%;
}

.menu-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.menu-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  width: 100%;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 36rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 底部操作 - 拉宽按钮 */
.action-section {
  padding: 40rpx 30rpx; /* 减小左右内边距 */
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-button {
  background: white;
  color: #666;
  border: none;
  border-radius: 16rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  width: 100%; /* 按钮铺满宽度 */
  box-sizing: border-box;
}

.action-button.logout {
  color: #FF4757;
}