page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  height: 100%;
}

.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 6rpx solid #07c160;
  padding-left: 15rpx;
}

.input-area {
  display: flex;
  margin-bottom: 20rpx;
}

.ai-input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.ai-button {
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.response-area {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

.response-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.response-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
}

.scrollarea {
  height: 300rpx;
  overflow-y: auto;
}

.log-item {
  margin-top: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.log-item:last-child {
  padding-bottom: env(safe-area-inset-bottom);
}
