/* pages/create/create.wxss */
.container {
  padding: 0;
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF5F5 0%, #F0F8FF 100%);
}

/* 头部 */
.header {
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #FFD6E7 0%, #C2F0FF 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #666;
}

/* 表单区域 */
.form-section {
  padding: 40rpx;
}

.form-item {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.label-required {
  color: #FF4757;
  margin-left: 8rpx;
  font-size: 24rpx;
}

.label-optional {
  color: #999;
  margin-left: 8rpx;
  font-size: 24rpx;
}

.label-desc {
  color: #999;
  margin-left: 12rpx;
  font-size: 24rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #FAFAFA;
}

.form-input:focus {
  border-color: #FF6B95;
  background: white;
}

.placeholder {
  color: #CCC;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 主题选择 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.theme-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 16rpx;
  background: #FAFAFA;
  transition: all 0.3s ease;
}

.theme-item.active {
  border-color: #FF6B95;
  background: linear-gradient(135deg, #FFF5F5, #FFF0F5);
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 149, 0.2);
}

.theme-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.theme-name {
  font-size: 24rpx;
  color: #666;
}

.theme-item.active .theme-name {
  color: #FF6B95;
  font-weight: 500;
}

/* 滑块 */
.slider-container {
  margin-bottom: 16rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.slider-label {
  font-size: 24rpx;
  color: #999;
}

.slider-value {
  font-size: 26rpx;
  color: #FF6B95;
  font-weight: 500;
  text-align: center;
  display: block;
}

/* 选择器 */
.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 12rpx;
  background: #FAFAFA;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 文本区域 */
.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #FAFAFA;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #FF6B95;
  background: white;
}

.textarea-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.ai-tip {
  font-size: 24rpx;
  color: #FF6B95;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 149, 0.1);
  border-radius: 16rpx;
}

/* 模板 */
.template-list {
  white-space: nowrap;
}

.template-item {
  display: inline-block;
  padding: 20rpx 32rpx;
  margin-right: 20rpx;
  border: 2rpx solid #F0F0F0;
  border-radius: 30rpx;
  background: #FAFAFA;
  font-size: 26rpx;
  color: #666;
}

.template-item:active {
  background: #F0F0F0;
}

.template-text {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  max-width: 400rpx;
}

/* 操作区域 */
.action-section {
  padding: 0 40rpx 60rpx;
  text-align: center;
}

.create-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: #E0E0E0;
  color: #999;
  transition: all 0.3s ease;
}

.create-button.active {
  background: linear-gradient(135deg, #FF6B95, #FF8E6B);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 149, 0.3);
}

.create-button.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 149, 0.3);
}

.action-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}