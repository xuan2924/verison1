/* pages/create/create.wxss */
page {
  background-color: #F7F8FA;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.container {
  padding-bottom: 200rpx;
}

/* 顶部标题区样式 */
.header {
  background: linear-gradient(135deg, #FF6B95, #FF8E91);
  padding: 60rpx 40rpx 100rpx;
  color: #fff;
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-top: 10rpx;
  display: block;
}

/* 表单容器 */
.form-container {
  margin-top: -40rpx;
  padding: 0 30rpx;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
}

.form-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.label-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.label-required {
  color: #FF6B95;
  margin-left: 6rpx;
}

/* 输入框样式 */
.form-input {
  height: 90rpx;
  background: #F8F9FB;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 主题网格 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.theme-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background: #F8F9FB;
  border-radius: 20rpx;
  position: relative;
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

.theme-item.active {
  background: #FFF0F4;
  border-color: #FF6B95;
  color: #FF6B95;
}

.theme-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.theme-name {
  font-size: 24rpx;
}

.active-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #FF6B95;
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 混合行卡片 */
.row-card .divider {
  height: 2rpx;
  background: #F0F0F0;
  margin: 30rpx 0;
}

.form-item-inline {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.value-highlight {
  color: #FF6B95;
  font-weight: bold;
}

.picker-box {
  background: #F8F9FB;
  padding: 10rpx 24rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.picker-arrow {
  font-size: 18rpx;
  margin-left: 10rpx;
  color: #999;
}

/* AI 按钮样式 */
.ai-btn {
  background: linear-gradient(135deg, #6B8AFF, #8E7BFF);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(107, 138, 255, 0.3);
}

.ai-icon {
  margin-right: 6rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #F8F9FB;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.word-count {
  font-size: 22rpx;
  color: #999;
}

.word-count.limit {
  color: #FF6B95;
}

/* 模板卡片样式 */
.template-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  display: block;
}

.template-list {
  white-space: nowrap;
  width: 100%;
}

.template-card {
  display: inline-block;
  width: 300rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.template-text {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  white-space: normal;
}

.template-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 107, 149, 0.9);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 4rpx 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.template-card:active .template-mask {
  transform: translateY(0);
}

/* 底部按钮 */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx 40rpx 60rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.create-btn {
  width: 100% !important;
  height: 100rpx;
  line-height: 100rpx;
  background: #E0E0E0;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.btn-active {
  background: linear-gradient(135deg, #FF6B95, #FF8E91);
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 149, 0.3);
}

.action-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 20rpx;
}