/* 房间页面 - 适配小屏幕 */
.container {
  width: 100%;
  padding: 0;
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF5F5 0%, #F0F8FF 100%);
  padding-bottom: 240rpx;
  box-sizing: border-box;
}

/* 房间头部 */
.room-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 60rpx 140rpx 40rpx;
  background: linear-gradient(135deg, #FFD6E7 0%, #C2F0FF 100%);
  border-radius:0 0 40rpx 40rpx;
}

.header-main {
  flex: 1;
  margin-right: 15rpx; /* 与右侧图标保持距离 */
}

.room-title {
  display: block;
  font-size: 55rpx; /* 减小字体 */
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.room-meta {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  gap: 12rpx; /* 减少间距 */
  margin-top: 10rpx;
}

.room-theme {
  font-size: 22rpx; /* 减小字体 */
  color: #FF6B95;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 12rpx; /* 减少内边距 */
  border-radius: 16rpx;
  white-space: nowrap;
}

.room-id {
  font-size: 22rpx; /* 减小字体 */
  color: #666;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 12rpx; /* 减少内边距 */
  border-radius: 16rpx;
  white-space: nowrap;
}

.header-actions {
  display: flex;
  gap: 50rpx; /* 减少间距 */
}

.action-icon {
  width: 52rpx; /* 减小尺寸 */
  height: 52rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx; /* 减小图标 */
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

/* 房间状态 - 统一边距 */
.room-status {
  display: flex;
  flex-wrap: wrap;
  padding: 40rpx 140rpx 30rpx; /* 统一左右边距140rpx */
  gap: 30rpx;
}

.status-item {
  flex: 1;
  min-width: 45%;
  text-align: center;
  margin-bottom: 15rpx;
}

.status-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.status-value {
  font-size: 36rpx;
  font-weight: 600;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  background: white;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}

/* 分区样式 - 统一边距 */
.section {
  padding: 0 140rpx 30rpx; /* 统一左右边距140rpx */
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-top: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 参与者列表 - 调整容器 */
.participants-scroll {
  white-space: nowrap;
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  padding: 15rpx 0;
}

.participants-list {
  display: inline-flex;
  gap: 25rpx;
  padding: 10rpx 0;
}

.participant-card {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  min-width: 120rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.participant-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B95, #FF8E6B);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 149, 0.3);
}

.avatar-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.turn-indicator {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #FF6B95;
  color: white;
  border-radius: 50%;
  width: 32rpx;
  height: 32rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.participant-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  text-align: center;
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

/* 时间线区域 - 统一边距 */
.timeline {
  position: relative;
  max-height: 400rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}

.timeline-item {
  display: flex;
  margin-bottom: 30rpx;
}

.timeline-marker {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.marker-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #FF6B95;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 149, 0.3);
}

.marker-line {
  flex: 1;
  width: 3rpx;
  background: linear-gradient(to bottom, #FF6B95, #FF8E6B);
  margin-top: 10rpx;
}

.timeline-content {
  flex: 1;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.05);
  border-left: 4rpx solid #FF6B95;
}

.turn-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.author {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B95;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.turn-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  word-break: break-word;
}

/* 空状态 */
.empty-timeline {
  text-align: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 25rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #CCC;
}

/* 底部操作栏 - 调整边距 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 140rpx 40rpx; /* 统一左右边距140rpx */
  box-shadow: 0 -8rpx 30rpx rgba(0,0,0,0.15);
  display: flex;
  gap: 25rpx;
  z-index: 100;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.action-button {
  flex: 1;
  border: none;
  border-radius: 18rpx;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  min-height: 100rpx;
}

.button-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.button-icon {
  font-size: 40rpx;
}

.button-text {
  font-size: 28rpx;
  font-weight: 600;
}

.secondary-actions {
  display: flex;
  gap: 20rpx;
  flex: 0.8;
}

.secondary-actions .action-button {
  flex: 1;
  padding: 20rpx 15rpx;
}